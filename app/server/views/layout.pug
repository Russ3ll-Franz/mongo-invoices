doctype html
html(lang=global.settings.defaultLocale)
	head
		title=(typeof(title)!=="undefined" ? title+" | " : "")+(global.settings.companyName ? global.settings.companyName : "")+ " | Mongo Invoices"
		meta(name="viewport", content="width=device-width, initial-scale=1")
		
		link(href="/lib/smoothness/jquery-ui-1.9.0.custom.css",rel="stylesheet",type="text/css")
		link(href="/lib/bootstrap/css/bootstrap.min.css", rel="stylesheet")
		link(href="/css/style.css", rel="stylesheet")
		- if (typeof style !== "undefined")
			include print_style
			!=style
		| <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		| <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		| <!--[if lt IE 9]>
		| <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		| <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		| <![endif]-->
	body.print_body
		.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
			.container-fluid
				.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
						span.sr-only!="Toggle navigation"
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/")!=title
				.collapse.navbar-collapse#bs-example-navbar-collapse-1
					.navbar-form.navbar-right
						a(href="/logout")#btn-logout.btn.btn-primary
							i.glyphicon.glyphicon-lock.icon-white
							|  Sign Out
		.container-fluid.cnt
			div.row
				div.col-sm-2
					if udata.companies.length>0
						.btn-group
							a(href=udata.role == 'admin' || udata.role == 'superadmin' ? '/settings' : "#",style="width: 100%;text-align:left").btn.btn-default
								b=global.settings.companyName+" "
							button(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false").btn.btn-default.dropdown-toggle
								span.caret
							ul.dropdown-menu
								each company in udata.companies
									- if (company && company.dbname && company.companyname)
										li
											a(href="/"+company.dbname)=company.companyname
						br
					else
						.list-group
							.list-group-item
								b=global.settings.companyName
					.list-group
						a(href="/"+global.settings.dbName+"/customers").list-group-item
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("Customers")
						a(href="/"+global.settings.dbName+"/customer").list-group-item.submenu
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("New customer")
						a(href="/"+global.settings.dbName+"/offers").list-group-item
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("Offers")
						a(href="/"+global.settings.dbName+"/offer").list-group-item.submenu
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("New offer")
						a(href="/"+global.settings.dbName+"/invoices").list-group-item
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("Invoices")
						a(href="/"+global.settings.dbName+"/invoice").list-group-item.submenu
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("New invoice")
					.list-group
						a(href="/account?id=" + udata._id).list-group-item.submenu
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("My account")
						a(href="/"+global.settings.dbName+"/accounts").list-group-item
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("Accounts")
						a(href="/account").list-group-item.submenu
							i.glyphicon.glyphicon-chevron-right.pull-right
							span=__("New account")

						- if (global.settings.roles[udata.role].admin)
							a(href="/"+global.settings.dbName+"/settings").list-group-item
								i.glyphicon.glyphicon-chevron-right.pull-right
								span=__("Settings")
				div.col-sm-10
					block content

		include modals/alert
		include modals/confirm
		include modals/errors
		- var conf = JSON.stringify(global._config)
		script
			var _config = !{conf}
		script(src="/validators.js")
		script(src="/accounting.js")
		script(src="/lib/jquery.min.js")
		script(src="/lib/jquery.form.js")
		script(src="/lib/bootstrap/js/bootstrap.min.js")
		script(src="/lib/jquery-ui-1.9.0.custom.min.js")
		script(src="/lib/jquerymx-3.2.custom.min.js")

		script(src="/js/scripts.js")
		- if (typeof js != 'undefined')
			script(src=js)
		- if (global._config.googleAnalytics!="")
			script(type="text/javascript").
				var _gaq = _gaq || [];
				_gaq.push(["_setAccount", '#{global._config.googleAnalytics}']);
				_gaq.push(["_trackPageview"]);
				(function () {
					var ga = document.createElement("script");
					ga.type = "text/javascript";
					ga.async = true;
					ga.src = ("https:" == document.location.protocol ? "https://ssl" : "http://www") + ".google-analytics.com/ga.js";
					var s = document.getElementsByTagName("script")[0];
					s.parentNode.insertBefore(ga, s);
				})();

