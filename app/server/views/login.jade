
div.col-sm-8.col-sm-offset-2#login-container
	form(method="post")#login-form.well
		h1="Mongo invoices"
		p.subheading=__("Please Login To Your Account")
		- if (typeof errors !== "undefined" && errors.length)
			.alert.alert-error
				h4=__("There are some errors")
				ul
					- for(a=0;a<errors.length;a++)
						li=errors[a].m
		.form-group
			label Username 
			input(type="text", name="user", value=result.user).form-control.required
		.form-group
			label Password
			input(type="password", name="pass").form-control.required
		br.clearfix
		label.checkbox(for="remember-me")=__("Remember Me")
			input(type="checkbox", name="remember-me", id="remember-me", value="true", checked='checked')
		button(type="submit").btn.btn-primary
			i.glyphicon.glyphicon-lock.icon-white
			=" "+__("Sign in")
		hr.clearfix
		a(href='#',onclick="$('#get-credentials').modal('show');return false;")#forgot-password=__("Forgot Your Password?")
		hr.clearfix
	
include modals/lost-password

script(src='/js/login.js')
